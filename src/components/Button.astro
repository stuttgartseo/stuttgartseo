---
// Props you can pass to the button component
const { label = "Click Me", type = "button" } = Astro.props;
---

<button class="button" type={type}>
    {label}
</button>

<style>
  .button {
      display: block;
      padding: 12px 24px;
      background-color: #2337ff;
      color: white;
      border: none;
      border-radius: 5px;
      font-size: 18px;
      cursor: pointer;
      transition: background-color 0.3s ease, transform 0.2s ease;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      margin-top: 12px;
  }

  .button:hover {
      background-color: #2337ff;
      transform: translateY(-3px);
  }

  .button:active {
      background-color: #2337ff;
      transform: translateY(0);
  }

  .button:focus {
      outline: none;
      box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.5);
  }
</style>
